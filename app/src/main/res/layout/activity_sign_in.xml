<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignInActivity">

    <include
        android:id="@+id/toolbar_login"
        layout="@layout/appbar_layout" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_textinputlayout_login"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="40dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/email_textinputlayout_login1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@android:string/defaultVoiceMailAlphaTag" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_inputtextlayout_login"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_textinputlayout_login"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="201dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password_inputtextlayout_login1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:inputType="textPassword"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/submit_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/whiteColor"
        android:background="@drawable/ccorner_5_degeree"
        android:layout_below="@+id/password_inputtextlayout_login"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="submit" />
    <Button
        android:id="@+id/forgetPassword_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/whiteColor"
        android:background="@drawable/ccorner_5_degeree"
        android:layout_below="@+id/submit_btn_login"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="forgetPassword" />

</LinearLayout>