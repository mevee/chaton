<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_imageview"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="2dp"
        android:src="@drawable/default_avatar"/>

         <TextView
             android:layout_marginTop="10dp"
             android:layout_gravity="center"
            android:id="@+id/profile_name_tv"
             android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hhhhhhhhhhhhh"
            android:textSize="18sp" />
      <TextView
          android:layout_gravity="center"
        android:id="@+id/status_profile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status"
          android:textColor="#000000"
        android:textSize="16sp"
          />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="40dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/friend_request_btn"
            android:text="Add friend"
            android:textColor="@color/whiteColor"
            android:background="@drawable/ccorner_5_degeree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <Button
            android:layout_marginTop="8dp"
            android:id="@+id/delete_friend_request_btn"
            android:text="Delete friend request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColor"
            android:layout_gravity="center"
            android:background="@drawable/ccorner_5_degeree"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</LinearLayout>
